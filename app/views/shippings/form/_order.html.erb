<%= form.fields_for :order do |order_form| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= order_form.label :weight %>
      <%= order_form.text_field :weight, class:"form-control", placeholder:'Weight'  %>
    </div>
    <div class="form-group col-md-6">
      <%= order_form.label :order_number %>
      <%= order_form.text_field :order_number, class:"form-control", placeholder:'Order Number'  %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= order_form.label :product_name %>
      <%= order_form.text_field :product_name, class:"form-control", placeholder:'Product Name'  %>
    </div>
    <div class="form-group col-md-6">
      <%= order_form.label :count %>
      <%= order_form.text_field :count, class:"form-control", placeholder:'Count'  %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= order_form.label :price %>
      <%= order_form.text_field :price, class:"form-control", placeholder:'Price'  %>
    </div>
    <div class="form-group col-md-6">
      <%= order_form.label :hs_code %>
      <%= order_form.text_field :hs_code, class:"form-control", placeholder:'HS Code'  %>
    </div>
  </div>
<% end %>