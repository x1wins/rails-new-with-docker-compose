<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-shipping-fast fa-lg text-primary"></i> <%= Shipping.model_name %></h1>
</div>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>box_count</th>
      <th>memo</th>
      <th>status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shippings.each do |shipping| %>
      <tr>
        <td><%= shipping.id %></td>
        <td><%= shipping&.parcel&.box_count %></td>
        <td><%= shipping&.parcel&.memo %></td>
        <td><%= shipping&.parcel&.status %></td>
        <td><%= link_to 'Show', shipping %></td>
        <td><%= link_to 'Edit', edit_shipping_path(shipping) %></td>
        <td><%= link_to 'Destroy', shipping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shipping', new_shipping_path %>
