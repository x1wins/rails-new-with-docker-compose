<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-store fa-lg text-primary"></i> <%= Store.model_name %></h1>
  <a href="<%= new_store_path %>" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
    <i class="fas fa-plus-square fa-lg text-white"></i> New Store</a>
</div>

<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Logo</th>
    <th><i class="fas fa-user-lock fa-lg text-info"></i> Lock</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @stores.each do |store| %>
    <tr>
      <td scope="row"><%= store.id %></td>
      <td><%= store.name %></td>
      <td><%= store.logo %></td>
      <td>
        <% if store.lockable %>
        <i class="fas fa-lock fa-lg text-danger"></i> Lock
        <% else %>
        <i class="fas fa-lock-open fa-lg text-success"></i> Unlock
        <% end %>
      </td>
      <td><i class="fas fa-file fa-lg text-primary"></i> <%= link_to 'Show', store %></td>
      <td><i class="fas fa-edit fa-lg text-info"></i> <%= link_to 'Edit', edit_store_path(store) %></td>
      <td><i class="fas fa-trash fa-lg text-danger"></i> <%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
